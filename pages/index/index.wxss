.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #1a1a2e;
  color: #fff;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.slogan {
  text-align: center;
}

.slogan-main {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
  -webkit-background-clip: text;
  color: transparent;
}

.slogan-sub {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

/* 功能区域 */
.features {
  margin-top: 60rpx;
}

.feature-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 20rpx;
}

.feature-desc {
  display: flex;
  flex-direction: column;
}

.feature-desc text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
}

/* 剩余次数提示 */
.quota-tip {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 40rpx;
}
