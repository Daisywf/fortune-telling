<view class="container">
  <!-- Logo区域 -->
  <view class="logo-section">
    <image class="logo" src="https://img.icons8.com/nolan/512/astrology.png" mode="aspectFit"></image>
    <view class="slogan">
      <text class="slogan-main">专为新时代年轻人打造的命理工具！</text>
      <text class="slogan-sub">结合传统命理与现代心理学，用科学解析命运，用数据探索未来，把命运掌握在自己手中！</text>
    </view>
  </view>

  <!-- 功能区域 -->
  <view class="features">
    <!-- 命理计算 -->
    <view class="feature-item" bindtap="navigateToFortune">
      <view class="feature-title">命理计算</view>
      <view class="feature-desc">
        <text>基于八字五行</text>
        <text>解析人生走向</text>
      </view>
    </view>

    <!-- MBTI测试 -->
    <view class="feature-item" bindtap="navigateToMbti">
      <view class="feature-title">MBTI测试</view>
      <view class="feature-desc">
        <text>现代人格分析</text>
        <text>了解性格特质</text>
      </view>
    </view>

    <!-- 八字五行介绍 -->
    <view class="feature-item" bindtap="navigateToIntro">
      <view class="feature-title">八字五行介绍</view>
      <view class="feature-desc">
        <text>传统智慧解读</text>
        <text>探索命理奥秘</text>
      </view>
    </view>
  </view>

  <!-- 剩余次数提示 -->
  <view class="quota-tip">
    <text>剩余免费次数: {{remainingQuota}}</text>
  </view>
</view>
