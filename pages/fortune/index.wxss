.container {
  min-height: 100vh;
  background-color: #1a1a2e;
  padding: 40rpx;
}

.form-section {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 40rpx;
}

.section-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 40rpx;
}

.group-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #ff6b6b;
}

.input-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 10rpx;
}

input, .picker {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
}

.placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.mbti-section {
  margin-top: 20rpx;
}

.mbti-picker {
  margin-bottom: 20rpx;
}

.mbti-tip {
  font-size: 24rpx;
  color: #4ecdc4;
  text-align: right;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  opacity: 0.8;
}
